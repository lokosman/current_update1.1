<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solution.kelsoft.com.kwahuguide.Activities.Attraction_DetailsActivity"
    tools:showIn="@layout/activity_attraction__details">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/attrImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:src="@drawable/no_cover_image" />

            <TextView
                android:id="@+id/txtLocationV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtDescVi"
                android:layout_alignRight="@+id/txtDescVi"
                android:layout_below="@+id/attrImg"
                android:layout_marginTop="20dp"
                android:text="Location :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtLocationInvisible"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtLocationV"
                android:layout_toEndOf="@id/txtDescVi"
                android:layout_toRightOf="@+id/txtDescVi"
                android:text="dummy"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtDescVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLocationV"
                android:layout_margin="20dp"
                android:text="Description :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtDescInvisible"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/txtDescVi"
                android:layout_toEndOf="@id/txtDescVi"
                android:layout_toRightOf="@id/txtDescVi"
                android:text="hello"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textColor="@android:color/white" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
